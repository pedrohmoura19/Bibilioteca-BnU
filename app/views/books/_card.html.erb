<%= stylesheet_link_tag "/books/_card" %>

  <div class="card card-custom" style="width: 18rem;">
    <div class="card-img-top pt-3">
    <%= image_tag book.photo.variant(resize_to_limit: [286, 130]) %>
    </div> 
    <div class="card-body">

      <h4 class="card-title">
        <%= book.title %> 
      </h4>

      <h6 class="card-text">
      <%= book.author %> 
      </h6>

      <h6 class="card-text">
      <%= book.year %> 
      </h6>

      <a class="">
      <%= link_to "Ver livro" , book_path(book) , class:"btn"  %>
      </a>

    </div>
  </div>