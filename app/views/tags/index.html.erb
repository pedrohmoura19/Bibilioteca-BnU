<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.category %></td>
        <td><%= link_to 'Adcionar Tag ao livro', new_tags_book_path(tag_id: tag.id) %></td>
        <td><%= link_to 'Editar a Tag', edit_tag_path(tag) %></td>
        <td><%= link_to 'Deletar a Tag', tag, method: :delete, data: { confirm: 'Deseja deletar a Tag?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar nova Tag', new_tag_path %>
