<%= form_with(model: tag) do |form| %>
  <% if tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
        <% tag.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Nome da Tag" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :category, "Categoria da Tag" %>
    <%= form.select :category, ["Semestre", "Disciplina", "Outros", "Licenciatura", "Bacharelado"] %>
  </div>

  <div class="actions">
    <%= form.submit "Criar Tag"%>
  </div>
<% end %>
